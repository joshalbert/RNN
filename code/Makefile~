LIB_LOC=/usr/local/atlas/lib
INC_LOC=/usr/local/atlas/include
LIBS=-lm -llapack -lcblas -latlas

OPTS=-g -O0

all: test cblas_test
	
test: test.c node.h
	gcc -I$(INC_LOC) -L$(LIB_LOC) -o test.o test.c $(LIBS) $(OPTS)

cblas_test: cblas_test.c
	gcc -I$(INC_LOC) -L$(LIB_LOC) -o cblas_test.o cblas_test.c $(LIBS) $(OPTS)

clean:
	rm -f *.o
